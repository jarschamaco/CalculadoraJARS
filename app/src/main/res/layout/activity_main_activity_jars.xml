<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.calculadorajars.MainActivityJARS">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button"
                android:textSize="20dp"
                android:layout_above="@+id/btacerca"
                android:layout_alignParentStart="true"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="8"
                android:id="@+id/button2"
                android:layout_alignTop="@+id/bt7"
                android:layout_toEndOf="@+id/bt7"
                android:textSize="20dp"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/button3"
                android:layout_alignTop="@+id/bt8"
                android:layout_toEndOf="@+id/bt8"
                android:textSize="20dp"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="x"
                android:id="@+id/button4"
                android:layout_alignTop="@+id/bt3"
                android:layout_toEndOf="@+id/bt3"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                android:onClick="agregar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="4"
                android:id="@+id/bt4"
                android:textSize="20dp"
                android:layout_above="@+id/bt7"
                android:layout_alignParentStart="true"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="5"
                android:id="@+id/bt5"
                android:layout_alignTop="@+id/bt4"
                android:layout_toEndOf="@+id/bt4"
                android:textSize="20dp"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/bt6"
                android:layout_alignTop="@+id/bt5"
                android:layout_toEndOf="@+id/bt5"
                android:textSize="20dp"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="+"
                android:id="@+id/btmas"
                android:layout_alignTop="@+id/bt9"
                android:layout_alignStart="@+id/btmenos"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                android:onClick="agregar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="1"
                android:id="@+id/bt1"
                android:textSize="20dp"
                android:layout_above="@+id/bt4"
                android:layout_alignParentStart="true"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="2"
                android:id="@+id/bt2"
                android:textSize="20dp"
                android:layout_alignTop="@+id/bt1"
                android:layout_toEndOf="@+id/bt1"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="3"
                android:id="@+id/bt3"
                android:layout_alignTop="@+id/bt2"
                android:layout_toEndOf="@+id/bt2"
                android:textSize="20dp"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="--"
                android:id="@+id/btmenos"
                android:layout_alignBottom="@+id/bt6"
                android:layout_toEndOf="@+id/bt6"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                android:onClick="agregar" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <Button
                android:layout_width="172dp"
                android:layout_height="80dp"
                android:text="ACERCA"
                android:id="@+id/btacerca"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/bt0"
                android:onClick="onClickAcerca" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/bt0"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/btigual"
                android:onClick="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/btigual"
                android:layout_alignTop="@+id/bt0"
                android:layout_alignStart="@+id/btmas"
                android:background="@color/colorPrimary"
                android:textSize="25dp"
                android:onClick="agregar" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
